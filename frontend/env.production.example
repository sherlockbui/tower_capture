# Production Frontend Environment Configuration

# Backend Configuration (Update with your actual backend URL)
NEXT_PUBLIC_BACKEND_URL=https://your-backend-domain.com
NEXT_PUBLIC_API_BASE_URL=https://your-backend-domain.com/api

# App Configuration
NEXT_PUBLIC_APP_NAME=Tower Capture Management
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG_LOGS=false
NEXT_PUBLIC_ENABLE_IMAGE_PREVIEW=true

# Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# UI Configuration
NEXT_PUBLIC_DEFAULT_DATE_FORMAT=YYYY-MM-DD
NEXT_PUBLIC_ITEMS_PER_PAGE=20

# Note: In production, images will be served from Cloudinary
# The getImageUrl function will automatically handle both local and Cloudinary URLs
